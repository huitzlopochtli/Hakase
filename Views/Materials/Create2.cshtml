    <div class="row">
        <div class="col-md-5">
            <div class="row">
                <div class="form-group">
                    <label for="name">名前</label>
                    <input type="text" name="name" class="form-control"/>
                </div>
            </div>
        </div>

        <div class="col-md-offset-2 col-md-5">
            abcd
        </div>
    </div>

