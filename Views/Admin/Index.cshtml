
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/lib/AdminLTE/adminlte.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionic/1.3.2/css/ionic.min.css" />
<div class="content">
    <div class="row">
        <fieldset class="col-md-5 col-sm-5 col-xs-12">
            <div class="row" style=" min-width: 250px; min-height: 150px;">
                <span class=" col-md-5" style="min-width: 150px; min-height: 150px; padding-left: 35px;">
                    <i class="ion ion-ios-person" style="font-size: 120px;"></i>
                    <p>顧客管理</p>
                </span>
                <div style="border-left: 1px solid black;height: 153px;"></div>

                <div class="info-box-content col-md-7" style="margin-left: 40px;">
                    <span class="info-box-text">
                        •  <a asp-area="Identity" asp-page="/Account/RegisterCustomer" style="font-size: 18px">新規顧客登録</a>
                    </span>

                    <br />
                    <span class="info-box-text">
                        • <a asp-controller="Admin" asp-action="CustomerPage" class="fa-link" style="font-size: 18px">顧客一覧</a>
                    </span>
                </div>
            </div>
        </fieldset>

        <fieldset class="col-md-5 col-sm-5 col-xs-12 col-md-offset-1 col-sm-offset-1">
            <div class="row" style=" min-width: 250px; min-height: 150px;">
                <span class=" col-md-5" style="min-width: 150px; min-height: 150px; padding-left: 35px;">
                    <i class="ion ion-android-image" style="font-size: 120px;"></i>
                    <p>素材</p>
                </span>
                <div style="border-left: 1px solid black;height: 153px;"></div>

                <div class="info-box-content col-md-7" style="margin-left: 40px;">
                    <span class="info-box-text">
                        •  <a asp-controller="Materials" asp-action="Index" style="font-size: 18px">素材アップロード</a>
                    </span>

                    <br />
                    <span class="info-box-text">
                        • <a asp-controller="Materials" asp-action="Create" class="fa-link" style="font-size: 18px">素材一覧</a>
                    </span>
                </div>
            </div>
        </fieldset>
    </div>
</div>