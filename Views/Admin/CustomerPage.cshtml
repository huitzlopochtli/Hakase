@model IEnumerable<WebApplication1.Models.Customer>

@{
    ViewData["Title"] = "CustomerPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var count = 0;
}
<link rel="stylesheet" href="~/lib/AdminLTE/adminlte.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionic/1.3.2/css/ionic.min.css" />

<a asp-controller="Admin" asp-action="Index">← 戻る</a>
<br />
<br />
<div class="info-box">
    <span class="info-box-icon bg-yellow"><i class="ion ion-ios-people-outline"></i></span>

    <div class="info-box-content">
        <span class="info-box-text"><h1>お客様</h1></span>
        <a asp-area="Identity" asp-page="/Account/RegisterCustomer">顧客登録</a>

    </div>
</div>

<table class="table table-striped table-bordered" style="width:100%" id="customerTable">
    <thead>
        <tr>
            <th>
                会社情報
            </th>
            <th>
                登録日時
            </th>
            <th>
                最終ログイン日時
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <b>@Html.DisplayFor(modelItem => item.CompanyNameHira)</b> (@Html.DisplayFor(modelItem => item.Phone)) <br />
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>

                </td>
                <td>
                    <a asp-action="CustomerEdit" asp-route-id="@item.Id" class="btn btn-warning">編集</a> |
                    <a asp-action="CustomerDelete" asp-route-id="@item.Id" class="btn btn-danger">削除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
