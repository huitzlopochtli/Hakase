@model IEnumerable<WebApplication1.Models.Customer>

@{
    ViewData["Title"] = "CustomerPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var count = 0;
}

<br />
<br />

<a asp-area="Identity" asp-page="/Account/RegisterCustomer" class="btn btn-primary pull-right">新規顧客登録</a>

<table class="table table-striped table-bordered" style="width: 100%; text-align: center" id="customerTable">
    <thead>
        <tr>
            <th>
                会社情報
            </th>
            <th>
                登録日時
            </th>
            <th>
                最終ログイン日時
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <b>@Html.DisplayFor(modelItem => item.CompanyNameHira)</b> <span style="font-size: small">(@Html.DisplayFor(modelItem => item.Phone)) </span><br />
                    <span style="font-size: small">@Html.DisplayFor(modelItem => item.Address)</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastLoginDate)
                </td>
                <td>
                    <a asp-action="CustomerEdit" asp-route-id="@item.Id" class="btn btn-warning">編集</a> |
                    <a asp-action="CustomerDelete" asp-route-id="@item.Id" class="btn btn-danger">削除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
