@model IEnumerable<WebApplication1.Models.Customer>

@{
    ViewData["Title"] = "CustomerPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var count = 0;
}
<link rel="stylesheet" href="~/lib/AdminLTE/adminlte.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionic/1.3.2/css/ionic.min.css" />

<a asp-controller="Admin" asp-action="Index">← 戻る</a>
<br />
<br />
<div class="info-box">
    <span class="info-box-icon bg-yellow"><i class="ion ion-ios-people-outline"></i></span>

    <div class="info-box-content">
        <span class="info-box-text"><h1>お客様</h1></span>
        <a asp-area="Identity" asp-page="/Account/RegisterCustomer">顧客登録</a>

    </div>
</div>

<table class="table table-striped table-bordered" style="width:100%" id="customerTable">
    <thead>
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.NameHira)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameKata)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyNameHira)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyNameKata)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneMobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateModified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserModified)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{
                        count += 1;
                        <p>@count.ToString()</p>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameHira)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameKata)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyNameHira)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyNameKata)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneMobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateModified)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserModified)
                </td>
                <td>
                    <a asp-action="CustomerEdit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="CustomerDelete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
