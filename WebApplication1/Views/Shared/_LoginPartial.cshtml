@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Identity
@using WebApplication1.Views

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})" method="post" id="logoutForm" class="navbar-right">

    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Paint" asp-action="Edit" class="navbar-brand right">リフォーム</a></li>

        @if (SignInManager.IsSignedIn(User))
        {
            if (Helper.UserRole.Equals("Admin"))
            {
                <li>
                    <a asp-controller="Admin" asp-action="Index">Admin</a>
                </li>
            }
            else if (Helper.UserRole.Equals("Customer"))
            {
                <li>
                    <a asp-controller="Admin" asp-action="Index">Customer</a>
                </li>
            }
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        }
        else
        {
            <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
        }
    </ul>
</form>





