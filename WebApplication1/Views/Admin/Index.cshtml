
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/lib/AdminLTE/adminlte.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionic/1.3.2/css/ionic.min.css"/>
<div class="content">
    <div class="row">
        <a asp-controller="Admin" asp-action="UserPage" class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-green"><i class="ion ion-ios-people-outline"></i></span>

                <div class="info-box-content">
                    <span class="info-box-text"><h2>ユーザー</h2></span>
                    <span class="info-box-number">@ViewBag.UserCount</span>
                </div>
            </div>
        </a>

        <a asp-controller="Admin" asp-action="CustomerPage"  class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-yellow"><i class="ion ion-ios-people-outline"></i></span>

                <div class="info-box-content">
                    <span class="info-box-text"><h2>お客様</h2></span>
                    <span class="info-box-number">@ViewBag.CustomerCount</span>
                </div> 
            </div>
        </a>

        <a asp-controller="Materials" asp-action="Index" class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-lime"><i class="ion ion-ios-cart-outline"></i></span>

                <div class="info-box-content">
                    <span class="info-box-text"><h2>素材</h2></span>
                    <span class="info-box-number">@ViewBag.MaterialCount</span>
                </div>
            </div>
        </a>
    </div>
</div>