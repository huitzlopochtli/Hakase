@page
@model RegisterCustomerModel

@{
    ViewData["Title"] = "登録";
}
<a asp-controller="Admin" asp-action="CustomerPage">← 戻る</a>

<div class="row">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h4>新しい顧客アカウントを作成します。</h4>
        <hr />
        <div class="col-sm-6">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">メール</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">パスワード</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">パスワード確認</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label asp-for="Input.Customer.NameHira"></label>
                <input asp-for="Input.Customer.NameHira" class="form-control" />
                <span asp-validation-for="Input.Customer.NameHira" class="text-danger"></span>

                <label asp-for="Input.Customer.NameKata"></label>
                <input asp-for="Input.Customer.NameKata" class="form-control" />
                <span asp-validation-for="Input.Customer.NameKata" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Customer.CompanyNameHira"></label>
                <input asp-for="Input.Customer.CompanyNameHira" class="form-control" />
                <span asp-validation-for="Input.Customer.CompanyNameHira" class="text-danger"></span>

                <label asp-for="Input.Customer.CompanyNameKata"></label>
                <input asp-for="Input.Customer.CompanyNameKata" class="form-control" />
                <span asp-validation-for="Input.Customer.CompanyNameKata" class="text-danger"></span>

                <label asp-for="Input.Customer.CompanyEmail"></label>
                <input asp-for="Input.Customer.CompanyEmail" class="form-control" />
                <span asp-validation-for="Input.Customer.CompanyEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Customer.Phone"></label>
                <input asp-for="Input.Customer.Phone" class="form-control" />
                <span asp-validation-for="Input.Customer.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Customer.PhoneMobile"></label>
                <input asp-for="Input.Customer.PhoneMobile" class="form-control" />
                <span asp-validation-for="Input.Customer.PhoneMobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Customer.DateOfBirth"></label>
                <input asp-for="Input.Customer.DateOfBirth" class="form-control" />
                <span asp-validation-for="Input.Customer.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Customer.Address"></label>
                <input asp-for="Input.Customer.Address" class="form-control" />
                <span asp-validation-for="Input.Customer.Address" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">登録</button>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
